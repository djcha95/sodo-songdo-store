{
  "version": 2,
  "functions": {
    "api/og.cjs": { "runtime": "nodejs20.x" }
  },
  "routes": [
    {
      "src": "^/api/og$",
      "dest": "/api/og"
    },
    {
      "src": "^/api/(?!og$)(.*)",
      "dest": "https://asia-northeast3-sso-do.cloudfunctions.net/$1"
    },
    {
      "src": "^/product/([A-Za-z0-9_-]+)$",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i)(kakaotalk|kakaostory|facebookexternalhit|facebot|naver|naverbot|yeti)"
        }
      ],
      "dest": "/api/og?id=$1"
    },
    {
      "src": "^/((?!assets/|sodomall-logo.png|sodomall_wel.png|_vercel/|favicon.ico|@vite|src/|api/).*)",
      "dest": "/index.html"
    }
  ]
}