{
  "version": 2,
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/fonts/(.*)\\.(woff2)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(sw\\.js|service-worker\\.js)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/((?!assets/|fonts/|api/|_next/|favicon.ico|sw.js|service-worker.js).*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, proxy-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/((?!og$|img$|product$).*)",
      "destination": "https://asia-northeast3-sso-do.cloudfunctions.net/$1"
    },
    {
      "source": "/product/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|Twitterbot|Slackbot|Discordbot|WhatsApp|LinkedInBot|Googlebot|bingbot|Yeti|Daum|KakaoTalk-Scrap).*"
        }
      ],
      "missing": [
        {
          "type": "header",
          "key": "sec-fetch-mode",
          "value": "navigate"
        }
      ],
      "destination": "/api/og?id=:id"
    },
    {
      "source": "/((?!api/|assets/|fonts/|_next/|favicon.ico|sw.js|service-worker.js).*)",
      "destination": "/index.html"
    }
  ]
}