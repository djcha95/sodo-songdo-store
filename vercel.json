{
  "version": 2,
  "rewrites": [
    { "source": "/api/og", "destination": "/api/og" },
    { "source": "/api/:path((?!og$).*)", "destination": "https://asia-northeast3-sso-do.cloudfunctions.net/:path" },
    {
      "source": "/product/:id",
      "has": [
        { "type": "header", "key": "user-agent", "value": "(?i)(kakaotalk|kakaostory|facebookexternalhit|facebot|naver|naverbot|yeti)" }
      ],
      "destination": "/api/og?id=:id"
    },
    { "source": "/:path((?!assets/|sodomall-logo.png|sodomall_wel.png|_vercel/|favicon.ico|@vite|src/|api/).*)", "destination": "/index.html" }
  ]
}
