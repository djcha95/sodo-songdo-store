{
  "version": 2,
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/fonts/(.*)\\.(woff2)$",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    { "source": "/(sodomall-logo\\.png|sodomall_wel\\.png)", "headers": [{ "key": "Cache-Control", "value": "public, max-age=86400" }] },
    {
      "source": "/index.html",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=60, s-maxage=60, stale-while-revalidate=300" }]
    }
  ],
  "rewrites": [
    {
      "source": "/api/((?!og$|img$|product$).*)",
      "destination": "https://asia-northeast3-sso-do.cloudfunctions.net/$1"
    },
    {
      "source": "/product/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|Twitterbot|Slackbot|Discordbot|WhatsApp|LinkedInBot|Googlebot|bingbot|Yeti|Daum|KakaoTalk-Scrap).*"
        }
      ],
      "missing": [
        { "type": "header", "key": "sec-fetch-mode", "value": "navigate" }
      ],
      "destination": "/api/og?id=:id"
    },
    {
      "source": "/((?!api/|assets/|fonts/|_next/|favicon.ico|sw.js).*)",
      "destination": "/index.html"
    }
  ]
}