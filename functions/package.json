{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "private": true,
  "main": "lib/functions/src/index.js",
  "type": "commonjs",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts . --fix",
    "build": "tsc -p .",
    "postbuild": "tsc-alias -p tsconfig.json",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "predeploy": "npm run build",
    "fixdata": "node -r ts-node/register -r tsconfig-paths/register src/scripts/runDataFix.ts",
    "fixdata:dry": "cross-env DRY_RUN=1 node -r ts-node/register -r tsconfig-paths/register src/scripts/runDataFix.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.14",
    "express": "^4.21.2",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "firebase": "^12.4.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}